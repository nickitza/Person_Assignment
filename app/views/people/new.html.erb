<h1> New Person Form </h1>
<hr />
<%= form_for @person do |f| %>

<%= f.label :first_name %>: 
<%= f.text_field :first_name %>
<br>
<%= f.label :last_name %>: 
<%= f.text_field :last_name %>
<br>
<%= f.label :age %>: 
<%= f.text_field :age %>
<br>
<%= f.label :hair_color %>:
<%= f.text_field :hair_color %>
<br>
<%= f.label :eye_color %>:
<%= f.text_field :eye_color %>
<br>
<%= f.label :gender %>:
<%= f.text_field :gender %>
<br>
<%= f.label :alive %> (true or false):
<%= f.text_field :alive %>
<br>
<br>
<%=f.submit%>


<%end%>